.fs-form-wrap
  position relative
  width 100%
  height 100%
  color #fff
  font-size 70%
  button
    border none
    background none
  button[disabled]
    opacity 0.3
    pointer-events none

.overview
  .fs-form-wrap
    height auto

.fs-title
  position absolute
  top 0
  left 0
  margin 0
  padding 40px
  width 100%
  padding 20px
  h1
    margin 0

.fs-form
  position relative
  text-align left
  font-size 2.5em
  top 6em
  right 2em
  left 0
  padding 0 3.75em 0 1em
  width auto
  font-size 2em
  &.fs-show
    -webkit-animation animFadeIn 0.5s
    animation animFadeIn 0.5s
  .fs-submit
    display none
  div
    &.cs-select
      &.cs-skin-boxes
        display block
  li
    &.fs-current
      visibility visible
  .fs-display-next
    .fs-hide
      visibility visible
      .fs-anim-lower
        -webkit-animation-delay 0.1s
        animation-delay 0.1s
    .fs-show
      .fs-anim-lower
        -webkit-animation-delay 0.25s
        animation-delay 0.25s
  .fs-display-prev
    .fs-hide
      .fs-anim-upper
        -webkit-animation-delay 0.1s
        animation-delay 0.1s
    .fs-show
      .fs-anim-upper
        -webkit-animation-delay 0.25s
        animation-delay 0.25s
  &.fs-form-overview
    top 0
    right 0
    padding 1.5em 1em 8em 1em
    font-size 1.5em

.no-js
  .fs-form
    padding 0 0 6em 0
  .fs-form-full
    .fs-fields
      & > li
        visibility visible

.fs-form-full
  top 32%
  margin 0 auto
  width 70%
  .fs-fields
    & > li
      label[data-info]::after
        position relative
        display inline-block
        margin-left 10px
        width 24px
        height 24px
        border 2px solid rgba(0,0,0,0.4)
        color rgba(0,0,0,0.4)
        border-radius 50%
        content 'i'
        vertical-align top
        text-align center
        font-weight 700
        font-style italic
        font-size 14px
        font-family Georgia, serif
        line-height 20px
        cursor pointer
        pointer-events auto
      label[data-info]::before
        position absolute
        bottom 100%
        left 0
        padding 0 0 10px
        min-width 200px
        content attr(data-info)
        font-size 0.4em
        color #6a7b7e
        opacity 0
        -webkit-transition opacity 0.3s, -webkit-transform 0.3s
        transition opacity 0.3s, transform 0.3s
        -webkit-transform translate3d(0,-5px,0)
        transform translate3d(0,-5px,0)
        pointer-events none
      label[data-info]:hover
        &::before
          opacity 1
          -webkit-transform translate3d(0,0,0)
          transform translate3d(0,0,0)

.fs-form-full,
.fs-message-error
  max-width 960px

.fs-form-overview
  padding 2.5em 30% 6em
  width 100%
  height 100%
  background #fffed8
  color #3b3f45
  font-size 1.2em
  .fs-fields
    &::before
      display block
      margin-bottom 2.5em
      color #3b3f45
      font-weight 700
      font-size 1.85em
    input
      border-bottom-color transparent
      color rgba(0,0,0,0.5)
      font-size 1.2em
      &:focus
        background-color #fffed8
    & > li
      .fs-radio-custom
        span
          max-width 140px
          font-size 75%
    .fs-radio-custom
      input[type="radio"]:checked
        & + label
          color rgba(0,0,0,0.8)
    textarea
      height 100px
      color rgba(0,0,0,0.5)
      padding 0
      border-color transparent
      &:focus
        background #fffed8
  ol
    max-width 
  .cs-skin-boxes
    & > span
      border-radius 5px
      width 90px
      height 70px
      font-size 0.8em
      &::before
        padding-top 50px
        box-shadow 0 20px 0 #292c30, inset 0 -5px #292c30
  .fs-submit
    border-color #232529
    color #232529

100%
  opacity 1
  opacity 1

.fs-form-full .fs-fields > li,
.fs-nav-dots, 
.fs-progress,
.fs-numbers,
button.fs-continue,
.fs-message-error,
.fs-message-final
  visibility hidden

.fs-show
  visibility visible !important

.fs-form-wrap input:focus,
.fs-form-wrap button:focus
  outline none

.fs-fields
  position relative
  margin 0 auto
  padding 0
  top 0
  list-style none
  & > li
    position relative
    z-index 1
    margin 0
    padding 0
    border none
    &:hover
      z-index 999
    label
      position relative
      &.fs-field-label
        display inline-block
        padding 0 5px 1em 0
        font-weight 700
        pointer-events none
    .fs-radio-custom
      span
        float left
        position relative
        margin-right 3%
        padding 10px
        max-width 200px
        width 30%
        text-align center
        font-weight 700
        font-size 50%
        font-family "Helvetica Neue", Helvetica, Arial, sans-serif
        label
          color rgba(0,0,0,0.4)
          -webkit-transition color 0.3s
          transition color 0.3s
      label
        display block
        padding-top 100%
        width 100%
        height 100%
        cursor pointer
  input
    display block
    margin 0
    padding 0 0 0.15em
    width 100%
    border none
    border-bottom 2px solid rgba(0,0,0,0.2)
    background-color transparent
    color #fffed8
    text-overflow ellipsis
    font-weight bold
    font-size 1.5em
    border-radius 0
    &:invalid
      box-shadow none
    &:focus
      background-color #3b3f45
      &::-webkit-input-placeholder
        color transparent
    &.fs-mark
      padding-left 1em
      background-position 0% 0.15em
      background-size auto 75%
      background-repeat no-repeat
    &.fs-mark[required]
      background-position 0% 0.15em, top right
      background-size auto 75%, 18px
      background-repeat no-repeat
  [required]
    background-position top right
    background-size 18px
    background-repeat no-repeat
  .fs-radio-custom
    input[type="radio"]
      position absolute
      display block
      margin 30px auto 20px
      margin 0 auto 20px
      width 100%
      height 100%
      opacity 0
      cursor pointer
    label
      &::after
        position absolute
        top 50%
        left 50%
        width 100%
        height 100%
        background-position 50% 0%
        background-size 85%
        background-repeat no-repeat
        content ''
        opacity 0.5
        -webkit-transition opacity 0.2s
        transition opacity 0.2s
        -webkit-transform translate(-50%,-50%)
        transform translate(-50%,-50%)
    input[type="radio"]:checked
      & + label
        color #fffed8
  textarea
    padding 0.25em
    width 100%
    height 200px
    border 2px solid rgba(0,0,0,0.2)
    background-color transparent
    color #fffed8
    font-weight 700
    font-size 0.85em
    resize none
    &:focus
      outline none

.js
  .fs-form-full
    .fs-fields
      & > li
        position absolute
        width 100%

.fs-form-overview .fs-fields > li,
.no-js .fs-form .fs-fields > li
  margin 1em 0 2em
  padding 0 0 2em 0
  border-bottom 2px solid rgba(0,0,0,0.1)

.fs-form-full .fs-fields > li label:hover ~ .fs-info,
.fs-form-full .fs-fields > li .fs-info:hover
  opacity 1
  -webkit-transform translateY(0)
  transform translateY(0)
  pointer-events auto

.fs-fields .fs-radio-custom label:hover::after,
.fs-fields input[type="radio"]:focus + label::after,
.fs-fields input[type="radio"]:checked + label::after
  opacity 1

.fs-fields input::-webkit-input-placeholder,
.fs-fields textarea::-webkit-input-placeholder
  color rgba(0,0,0,0.1)

.fs-fields input:-moz-placeholder,
.fs-fields textarea:-moz-placeholder
  color rgba(0,0,0,0.1)

.fs-fields input::-moz-placeholder,
.fs-fields textarea::-moz-placeholder
  color rgba(0,0,0,0.1)

.fs-fields input:-ms-input-placeholder,
.fs-fields textarea:-ms-input-placeholder
  color rgba(0,0,0,0.1)

.fs-nav-dots
  position absolute
  top 50%
  right 60px
  left auto
  -webkit-transform translateY(-50%)
  transform translateY(-50%)
  right 25px
  button
    position relative
    display block
    padding 0
    margin 16px 0
    width 16px
    height 16px
    border-radius 50%
    background transparent
    -webkit-transition -webkit-transform 0.3s ease, opacity 0.3s ease
    transition transform 0.3s ease, opacity 0.3s ease
    &::after
      background-color rgba(0,0,0,0.4)
      -webkit-transform perspective(1000px) rotate3d(0,1,0,180deg)
      transform perspective(1000px) rotate3d(0,1,0,180deg)
    &.fs-dot-current
      -webkit-transform perspective(1000px) rotate3d(0,1,0,180deg)
      transform perspective(1000px) rotate3d(0,1,0,180deg)

.fs-nav-dots button::before,
.fs-nav-dots button::after
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border-radius 50%
  background-color rgba(0,0,0,0.5)
  content ''
  text-indent 0
  -webkit-backface-visibility hidden
  backface-visibility hidden

.fs-nav-dots button:hover::before,
.fs-nav-dots button.fs-dot-current::before
  background #fffed8

.fs-progress
  position absolute
  top 0
  width 0%
  height 0.5em
  background #fffed8
  -webkit-transition width 0.3s ease-in-out
  transition width 0.3s ease-in-out

.fs-numbers
  position absolute
  top 0
  right 0
  overflow hidden
  color rgba(0,0,0,0.4)
  margin 40px
  width 2em
  font-weight 700
  font-size 2em
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif
  cursor default
  margin 20px
  &:after
    position absolute
    width 100%
    text-align center
    content '/'
    font-weight 300
    opacity 0.4
    left 0
  span
    float right
    width 40%
    text-align center
  .fs-number-current
    float left
  .fs-number-new
    position absolute
    left 0
    -webkit-transform translateY(100%)
    transform translateY(100%)
  &.fs-show-next
    .fs-number-new
      -webkit-animation animMoveUpFromDown 0.4s both
      animation animMoveUpFromDown 0.4s both

to
  -webkit-transform translateY(0)
  -webkit-transform translateY(0)
  transform translateY(0)
  -webkit-transform translateY(0)
  -webkit-transform translateY(0)
  transform translateY(0)

button.fs-submit,
button.fs-continue
  padding 0.6em 1.5em
  border 3px solid #232529
  border-radius 40px
  font-weight 700
  color rgba(0,0,0,0.4)

button.accept-button
  @extends button.fs-submit
  background #00f + 30
  &:hover
    background #00f + 60
    background-image linear-gradient(to bottom, rgba(#fff,0), #00f + 30)
  &:active    
    background #00f
    background-image linear-gradient(to top, rgba(#fff,0), #00f - 20)
button.cancel-button
  @extends button.fs-submit
  background #f00 + 30
  &:hover
    background #f00 + 60
    background-image linear-gradient(to bottom, rgba(#fff,0), #f00 + 30)
  &:active    
    background #f00
    background-image linear-gradient(to top, rgba(#fff,0), #f00 - 20)


.fs-form-overview .fs-submit,
.no-js .fs-form .fs-submit
  display block
  float right

button
  &.fs-continue
    position absolute
    right 0
    bottom 0
    margin 0 40px 60px 0
    font-size 1.25em
    right 20px
    bottom 20px
    margin 0
    padding 50px 0 0 50px
    width 50px
    height 50px
    border-radius 50%
    font-size 2em
    &::before
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      content '\27A1'
      text-align center
      font-size 1em
      line-height 50px
  &.fs-submit
    width 100%
    font-size 1.25em

button.fs-submit:hover,
button.fs-submit:focus,
button.fs-continue:hover
  background #232529
  color #fff

.fs-continue
  &::after
    position absolute
    top 100%
    left 0
    width 100%
    line-height 3
    text-align center
    background transparent
    color rgba(0,0,0,0.3)
    content 'or press ENTER'
    font-size 0.65em
    pointer-events none
    content ''

.fs-message-error
  position absolute
  bottom 75%
  left 50%
  z-index 800
  max-width 960px
  width 70%
  color #eb7e7f
  font-weight 700
  font-size 1em
  opacity 0
  -webkit-transform translate3d(-50%,-5px,0)
  transform translate3d(-50%,-5px,0)
  bottom 1.75em
  left 0
  padding 0 90px 0 2em
  width 100%
  font-size 1.5em
  -webkit-transform translate3d(0,-5px,0)
  transform translate3d(0,-5px,0)
  &.fs-show
    opacity 1
    -webkit-transition -webkit-transform 0.3s, opacity 0.3s
    transition transform 0.3s, opacity 0.3s
    -webkit-transform translate3d(-50%,0,0)
    transform translate3d(-50%,0,0)
    -webkit-transform translate3d(0,0,0)
    transform translate3d(0,0,0)

.fs-form li.fs-hide,
.fs-form li.fs-show
  pointer-events none

.fs-form .fs-display-next .fs-hide .fs-anim-lower,
.fs-form .fs-display-next .fs-hide .fs-anim-upper
  -webkit-animation animHideNext 0.5s cubic-bezier(0.7,0,0.3,1) forwards
  animation animHideNext 0.5s cubic-bezier(0.7,0,0.3,1) forwards

.fs-form .fs-display-next .fs-show .fs-anim-lower,
.fs-form .fs-display-next .fs-show .fs-anim-upper
  -webkit-animation animShowNext 0.5s cubic-bezier(0.7,0,0.3,1) both 0.15s
  animation animShowNext 0.5s cubic-bezier(0.7,0,0.3,1) both 0.15s

.fs-form .fs-display-prev .fs-hide .fs-anim-lower,
.fs-form .fs-display-prev .fs-hide .fs-anim-upper
  -webkit-animation animHidePrev 0.5s cubic-bezier(0.7,0,0.3,1) forwards
  animation animHidePrev 0.5s cubic-bezier(0.7,0,0.3,1) forwards

.fs-form .fs-display-prev .fs-show .fs-anim-lower,
.fs-form .fs-display-prev .fs-show .fs-anim-upper
  -webkit-animation animShowPrev 0.5s cubic-bezier(0.7,0,0.3,1) both 0.15s
  animation animShowPrev 0.5s cubic-bezier(0.7,0,0.3,1) both 0.15s
