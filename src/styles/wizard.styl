.wizard-table
  border-collapse separate
  border-spacing 0
  color #4a4a4d
  font 14px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif

.wizard-th,
.wizard-td
  padding 10px 15px
  vertical-align middle

.wizard-thead
  background #395870
  background linear-gradient(#49708f, #293f50)
  color #fff
  font-size 11px
  text-transform uppercase

.wizard-th
  &:first-child
    border-top-left-radius 5px
    text-align left
  &:last-child
    border-top-right-radius 5px

.wizard-tbody
  .wizard-tr
    &:nth-child(even)
      background #f0f0f2

.wizard-td
  border-bottom 1px solid #cecfd5
  border-right 1px solid #cecfd5
  &:first-child
    border-left 1px solid #cecfd5

.label-title
  color #395870
  display block

.text-offset
  color #7c7c80
  font-size 12px

.item-multiple
  display block

.wizard-tfoot
  text-align right
  tr
    &:last-child
      background #f0f0f2
      color #395870
      font-weight bold
      td
        &:first-child
          border-bottom-left-radius 5px
        &:last-child
          border-bottom-right-radius 5px

.status-success
  color #007700

.status-error
  color #770000

.wizard
  h1
    margin 1em 0 0.5em 0
    font-weight 600
    font-family 'Titillium Web', sans-serif
    font-size 36px
    line-height 40px
    color #355681
    background #fff
    text-transform uppercase
  h2
    margin 1em 0 0.5em 0
    font-weight 600
    font-family 'Titillium Web', sans-serif
    text-shadow 0 -1px 1px rgba(0,0,0,0.4)
    font-size 28px
    line-height 40px
    color #355681
    text-transform uppercase
    border-bottom 1px solid rgba(53,86,129, 0.3)
  h3
    margin 1em 0 0.5em 0
    font-weight normal
    font-family 'Titillium Web', sans-serif
    text-shadow 0 -1px 1px rgba(0,0,0,0.4)
    font-size 22px
    line-height 40px
    color #355681
  h4, h5
    margin 1em 0 0.5em 0
    font-weight 600
    font-family 'Titillium Web', sans-serif
    line-height 20px
    font-family 'Muli', sans-serif
  h4
    font-size 21px
    color #394349
  h5
    font-size 14px
    color #395870
