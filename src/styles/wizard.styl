.wizard-table
  border-collapse separate
  border-spacing 0
  color #4a4a4d
  font 14px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif

.wizard-th,
.wizard-td
  padding 10px 15px
  vertical-align middle

.wizard-thead
  background #395870
  background linear-gradient(#49708f, #293f50)
  color #fff
  font-size 11px
  text-transform uppercase

.wizard-th
  &:first-child
    border-top-left-radius 5px
    text-align left
  &:last-child
    border-top-right-radius 5px

.wizard-tbody
  tr
    &:nth-child(even)
      background #f0f0f2

.wizard-td
  border-bottom 1px solid #cecfd5
  border-right 1px solid #cecfd5
  &:first-child
    border-left 1px solid #cecfd5

.label-title
  color #395870
  display block

.text-offset
  color #7c7c80
  font-size 12px

.item-multiple
  display block

.wizard-tfoot
  text-align right
  tr
    &:last-child
      background #f0f0f2
      color #395870
      font-weight bold
      td
        &:first-child
          border-bottom-left-radius 5px
        &:last-child
          border-bottom-right-radius 5px

.success
  color #007700

.error
  color #770000