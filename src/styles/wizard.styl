.wizard-table
  border-collapse separate
  border-spacing 0
  color #4a4a4d
  font 14px/1.4 "Helvetica Neue", Helvetica, Arial, sans-serif

.wizard-table-body
  .wizard-table-row
    &:nth-child(even)
      background #f0f0f2

.wizard-label-title
  color #395870
  display block

.status-success
  color #007700

.status-error
  color #770000

.wizard
  h4, h5
    margin 1em 0 0.5em 0
    font-weight 600
    font-family 'Titillium Web', sans-serif
    line-height 20px
    font-family 'Muli', sans-serif
  h4
    font-size 21px
    color #394349
  h5
    font-size 14px
    color #395870
